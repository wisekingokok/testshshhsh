<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">
    <TextView
        android:textSize="17sp"
        android:textColor="@color/white"
        android:text="闪电阅读"
        android:gravity="center"
        android:layout_width="match_parent"
        android:background="@color/bg"
        android:layout_height="50dp" />
    <LinearLayout
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/shape_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="标记"
                android:textSize="15sp"
                android:id="@+id/tv_mark"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="400"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:textColor="@color/amber"
                android:layout_toRightOf="@+id/tv_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ProgressBar
                android:layout_below="@+id/tv_mark"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:id="@+id/mark_progressBar"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/mark_progressbar"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="记忆"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:id="@+id/tv_remenber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="0"
                android:id="@+id/tv_remenber_text"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:textColor="@color/tv_remenber"
                android:layout_toRightOf="@+id/tv_remenber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ProgressBar
                android:layout_below="@+id/tv_remenber"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:id="@+id/remenber_progressBar"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/remenber_progressbar"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="检查"
                android:textSize="15sp"
                android:id="@+id/tv_check"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="400"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:textColor="@color/tv_check"
                android:layout_toRightOf="@+id/tv_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ProgressBar
                android:layout_below="@+id/tv_check"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:id="@+id/check_progressBar"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/check_progressbar"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list"
            android:background="@drawable/shape_white"
            android:divider="#DDDEDE"
            android:dividerHeight="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
        <ProgressBar
            android:id="@+id/progress_center"
            style="?android:attr/progressBarStyleSmall"
            android:indeterminateTint="@color/tv_remenber"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>